
<div class="container">

<div class="filter-bar">
<ul>
  <li>
    <button class="btn active" onclick="filterSelection('all')">Show All</button>
  </li>

  <li>
    <button class="btn" onclick="filterSelection('skate')">Skate</button>
  </li>

  <li>
    <button class="btn" onclick="filterSelection('snowboard')">Snowboard</button>
  </li>

  <li>
    <button class="btn" onclick="filterSelection('surf')">Surf</button>
  </li>
</ul>
</div>

<% places.forEach((place) => { %>
  <div class="place <%= place.type %>">
    <p>
      Address: <%= place.address %><br>
      Name:    <%= place.name %><br>
      Type:    <%= place.type %><br>
      Image:   <%= place.displayPicture %>
    </p>
  </div>
  <%  }) %>
  
</div>
  
  <script type="text/javascript" src="/javascripts/filters.js"></script>