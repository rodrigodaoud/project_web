
    <div class="more-places <%= places.type %>">
      <img class="detail-image" src="<%= places.displayPicture.picPath %>" alt="">
      <div class="detail-info-container">
        <div class="detail-info">
          <h3 class="detail-name"><%= places.name %></h3>
          <div class ="img-<%= places.type %>">
          </div>
        </div>
        <p class="detail-address">
            Address: <%= places.address %><br>
        </p> 
      </div> 

        
        <% if (user._id == places.createdBy) { %>
        <form action="/places/<%= places.id %>/delete" method='post'>
          <input type="submit" value="DELETE">
        <% } %>
        </form>
  
      

       <div class="picture-gallery">
        <% places.additionalPicture.forEach((picture) => { %>
          <div class="mySlides">
            <img src="<%= picture.picPath %>" alt=""> 
          </div>
        <% }) %>
      </div>

